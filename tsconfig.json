{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2022"],
    // "target": "ESNext",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": false,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"]
}
